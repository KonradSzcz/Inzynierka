<!-- res/drawable/rectangular_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kolor tła w stanie wciśnięcia -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Kolor tła w stanie wciśnięcia -->
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- Kolor tła w stanie enabled -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#2C74B3" /> <!-- Kolor tła w stanie enabled -->
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- Kolor tła w stanie disabled -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Kolor tła w stanie disabled -->
            <corners android:radius="0dp" />
        </shape>
    </item>
</selector>
