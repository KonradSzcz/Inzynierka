<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Flashcards"
    android:background="@color/black">

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/chapterSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center">

        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="1"
            android:rowCount="2"
            android:orientation="vertical"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_chapter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WstÄ™p"
                android:textSize="24dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

            <CheckBox
                android:id="@+id/checkbox_chapter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bitcoin"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </GridLayout>

        <!-- Drugi GridLayout -->
        <GridLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:columnCount="1"
            android:rowCount="2"
            android:orientation="vertical"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_chapter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blockchain"
                android:textSize="24dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

            <CheckBox
                android:id="@+id/checkbox_chapter4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Etherum"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </GridLayout>

    </LinearLayout>


    <!-- RecyclerView for flashcards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chapterSelection"
        android:layout_above="@id/card_counter"/>

    <!-- Card counter TextView -->
    <TextView
        android:id="@+id/card_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="0 / 0"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

</RelativeLayout>
