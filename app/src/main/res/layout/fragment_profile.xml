<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Profile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/black">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mój postęp"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/title"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile_icon"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            android:layout_marginTop="30dp"
            android:alpha="0.4"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/circular_progress2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/title"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sprawdziany"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/tests"
            android:textStyle="bold"
            android:layout_below="@id/progressBar"
            android:layout_marginTop="30dp"/>


        <RelativeLayout
            android:id="@+id/testsection"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tests"
            android:layout_centerHorizontal="true"
            android:background="@color/gray">

            <View
                android:id="@+id/lineAboveText1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_blue" />

            <RelativeLayout
                android:id="@+id/section1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineAboveText1">



                <TextView
                    android:id="@+id/test1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Wstęp"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/percent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="22dp" />


            </RelativeLayout>


            <View
                android:id="@+id/lineBelowText1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/section1"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_blue" />


            <RelativeLayout
                android:id="@+id/section2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText1">



                <TextView
                    android:id="@+id/test2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Blockchain"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/percent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentRight="true"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="22dp" />


            </RelativeLayout>


            <View
                android:id="@+id/lineBelowText2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@id/section2"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_blue" />

    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>