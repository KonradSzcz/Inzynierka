<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Tests">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/testsite">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circular_progress2"
                android:rotation="180" />

            <TextView
                android:id="@+id/progressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="100%"
                android:textSize="20dp"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topPanel">

                <View
                    android:id="@+id/lineBelowText1"
                    android:layout_marginTop="10dp"
                    android:layout_width="360dp"
                    android:layout_height="4dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark_blue" />


            <RelativeLayout
                android:id="@+id/introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText1"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/introicon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/testicon" />

                <TextView
                    android:id="@+id/introductiontext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Wstęp"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/intropercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="32dp" />

            </RelativeLayout>

            <View
                android:id="@+id/lineBelowText2"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_below="@id/introduction"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_blue" />


            <RelativeLayout
                android:id="@+id/blockchain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText2"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/blockchainicon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/testicon" />

                <TextView
                    android:id="@+id/blockchaintext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Blockchain"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/blockchainpercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:id="@+id/lineBelowText3"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_below="@id/blockchain"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_blue" />





            <RelativeLayout
                android:id="@+id/bitcoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText3"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/bitcoinicon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/testicon" />

                <TextView
                    android:id="@+id/bitcointext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Bitcoin"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bitcoinpercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:text="0%"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    tools:ignore="DuplicateIds" />
            </RelativeLayout>

            <View
                android:id="@+id/lineBelowText4"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_below="@id/bitcoin"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_blue" />

            <RelativeLayout
                android:id="@+id/ethereum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText4"
                android:layout_marginVertical="5dp">

                <ImageView
                    android:id="@+id/ethereumicon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/testicon" />

                <TextView
                    android:id="@+id/ethereumtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Ethereum"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ethereumpercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:text="0%"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="32dp" />
            </RelativeLayout>

            <View
                android:id="@+id/lineBelowText5"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_below="@id/ethereum"
                android:layout_centerHorizontal="true"
                android:background="@color/dark_blue" />



            <RelativeLayout
                android:id="@+id/blockchainlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText2"
                android:layout_above="@id/lineBelowText3"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="#E6000000"
                android:clickable="true"
                android:focusable="true">

            <!-- Ikona kłódki -->
            <ImageView
                android:id="@+id/lockIcon1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_lock"
                android:alpha="1.0" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/bitcoinlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText3"
                android:layout_above="@id/lineBelowText4"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="#E6000000"
                android:clickable="true"
                android:focusable="true">

                <!-- Ikona kłódki -->
                <ImageView
                    android:id="@+id/lockIcon2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_lock"
                    android:alpha="1.0" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/etherumlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineBelowText4"
                android:layout_above="@id/lineBelowText5"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="#E6000000"
                android:clickable="true"
                android:focusable="true">

                <!-- Ikona kłódki -->
                <ImageView
                    android:id="@+id/lockIcon3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_lock"
                    android:alpha="1.0" />
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
