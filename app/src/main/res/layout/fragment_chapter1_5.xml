<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chapter1_3"
    android:background="@color/dark_blue">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/chapter1"
        android:id="@+id/imageView"/>


    <ScrollView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/progressbar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Title1"
                android:text="@string/chapter1_5_title"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Title2"
                android:text="@string/chapter1_6_title"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:visibility="invisible"
                android:gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter1_5"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:id="@+id/textView1"
                android:layout_below="@id/Title1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chapter1_6"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:id="@+id/textView2"
                android:visibility="invisible"
                android:layout_below="@id/Title2"/>

            <Button
                android:id="@+id/QuizLeft"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="40dp"
                android:text="Zalety"
                android:visibility="invisible"
                android:drawableLeft="@drawable/baseline_arrow_back_24"/>

            <Button
                android:id="@+id/QuizRight"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:text="Wady"
                android:drawableRight="@drawable/baseline_arrow_forward_24"/>
        </RelativeLayout>
    </ScrollView>


    <ProgressBar
        android:id="@+id/progressbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:background="@color/theme2_2"
        android:progressTint="@color/white" />

</RelativeLayout>