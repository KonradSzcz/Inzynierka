<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Home">

    <include
        android:id="@+id/top"
        layout="@layout/mainbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border_green">

                <!-- ImageButton jako tło -->
                <ImageButton
                    android:id="@+id/introductionbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_button_background"
                    android:src="@drawable/wstep7rounded" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="10dp"
                    android:progress="0"
                    android:max="8"
                    android:progressTint="@color/green" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_chapternumber"
                    android:padding="10dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp">

                    <!-- TextView wewnątrz prostokąta -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 Rozdziałów"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/intropercent"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="bottom|right"
                    android:textSize="24dp"/>

            </FrameLayout>


            <GridLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="5"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:useDefaultMargins="true">

                <!-- FrameLayout 1 -->
                <FrameLayout
                    android:id="@+id/blockchain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_border_green">

                    <!-- ImageButton jako tło -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:src="@drawable/blockchain3rounded"
                        android:id="@+id/blockchainbutton"
                        android:layout_margin="2dp" />

                    <ProgressBar
                        android:id="@+id/progressbar2"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="10dp"
                        android:progress="0"
                        android:max="8"
                        android:progressTint="@color/green" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_chapternumber"
                        android:padding="10dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="5dp">

                        <!-- TextView wewnątrz prostokąta -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 Rozdziałów"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/blockchainpercent"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/blockchainlock"
                        android:layout_width="175dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="#B3000000"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Ikona kłódki -->
                        <ImageView
                            android:id="@+id/lockIcon1"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_lock"
                            android:alpha="1.0" />
                    </RelativeLayout>

                </FrameLayout>



                <!-- FrameLayout 2 -->
                <FrameLayout
                    android:id="@+id/bitcoin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_border_green">

                    <!-- ImageButton jako tło -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:src="@drawable/bitcoin5rounded"
                        android:id="@+id/bitcoinnbutton"
                        android:layout_margin="2dp" />

                    <ProgressBar
                        android:id="@+id/progressbar3"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="10dp"
                        android:progress="0"
                        android:max="9"
                        android:progressTint="@color/green" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_chapternumber"
                        android:padding="10dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="8dp">

                        <!-- TextView wewnątrz prostokąta -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9 Rozdziałów"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bitcoinpercent"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="24dp"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/bitcoinlock"
                        android:layout_width="175dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="#B3000000"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Ikona kłódki -->
                        <ImageView
                            android:id="@+id/lockIcon2"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_lock"
                            android:alpha="1.0" />
                    </RelativeLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ethereum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_border_green">

                    <!-- ImageButton jako tło -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:src="@drawable/ethereum1rounded"
                        android:id="@+id/ethereumbutton"
                        android:layout_margin="2dp"/>

                    <ProgressBar
                        android:id="@+id/progressbar4"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="10dp"
                        android:progress="0"
                        android:max="4"
                        android:progressTint="@color/green" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_chapternumber"
                        android:padding="10dp"
                        android:layout_gravity="top"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="58dp">

                        <!-- TextView wewnątrz prostokąta -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4 Rozdziały"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ethereumpercent"
                        android:text="0%"
                        android:textColor="@color/white"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="90dp"
                        android:textSize="24dp"
                        android:visibility="gone"/>

                    <RelativeLayout
                        android:id="@+id/ethereumlock"
                        android:layout_width="175dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="#B3000000"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Ikona kłódki -->
                        <ImageView
                            android:id="@+id/lockIcon3"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_lock"
                            android:alpha="1.0" />
                    </RelativeLayout>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/wallets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_border_green">

                    <!-- ImageButton jako tło -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:src="@drawable/wallet1rounded"
                        android:id="@+id/walletsbutton"
                        android:layout_margin="2dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_chapternumber"
                        android:padding="10dp"
                        android:layout_gravity="top|end"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="70dp">

                        <!-- TextView wewnątrz prostokąta -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Rozdziałów"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/walletslock"
                        android:layout_width="175dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="#B3000000"
                        android:clickable="true"
                        android:focusable="true">


                        <!-- Ikona kłódki -->
                        <ImageView
                            android:id="@+id/lockIcon4"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_lock"
                            android:alpha="1.0" />
                    </RelativeLayout>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/danger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_border_green">

                    <!-- ImageButton jako tło -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:src="@drawable/danger3rounded"
                        android:id="@+id/dangerbutton"
                        android:layout_margin="2dp"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_chapternumber"
                        android:padding="10dp"
                        android:layout_gravity="left"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="55dp">

                        <!-- TextView wewnątrz prostokąta -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 Rozdziałów"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </FrameLayout>

                    <RelativeLayout
                        android:id="@+id/dangerslock"
                        android:layout_width="175dp"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:background="#B3000000"
                        android:clickable="true"
                        android:focusable="true">

                        <!-- Ikona kłódki -->
                        <ImageView
                            android:id="@+id/lockIcon5"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_lock"
                            android:alpha="1.0" />
                    </RelativeLayout>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/flashcards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_border_green">

                    <!-- ImageButton jako tło -->
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_background"
                        android:src="@drawable/flashcards1rounded"
                        android:id="@+id/flashcardsbutton"
                        android:layout_margin="2dp"/>

                </FrameLayout>
            </GridLayout>

            <FrameLayout
                android:id="@+id/tests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border_green">

                <!-- ImageButton jako tło -->
                <ImageButton
                    android:id="@+id/testsbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/rounded_button_background"
                    android:src="@drawable/tests1rounded" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
