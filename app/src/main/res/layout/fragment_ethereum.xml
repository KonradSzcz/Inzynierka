<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Ethereum">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/topPanel"
            android:background="@drawable/titleethereum">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/circular_progress2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:rotation="180"/>

            <TextView
                android:id="@+id/progressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="100%"
                android:textSize="20dp"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/chapters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.8"
                    android:text="Wszystkie rozdziały: 4"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/endedchapters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.8"
                    android:text="Pozostałe rozdziały: 0"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topPanel">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/section1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp">

                    <ImageView
                        android:id="@+id/readIndicator1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/baseline_check_circle_24_unread" />

                    <TextView
                        android:id="@+id/rozdzial1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/readIndicator1"
                        android:layout_marginStart="30dp"
                        android:text="Czym jest Ethereum?"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rozdzial1time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/readIndicator1"
                        android:layout_alignStart="@id/readIndicator1"
                        android:layout_marginTop="1dp"
                        android:text="48s"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rozdzial1content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rozdzial1"
                        android:layout_alignStart="@id/rozdzial1"
                        android:layout_marginEnd="30dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:scrollHorizontally="false" />
                </RelativeLayout>

                <View
                    android:id="@+id/lineBelowText1"
                    android:layout_width="360dp"
                    android:layout_height="4dp"
                    android:layout_below="@id/section1"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark_blue" />

                <!-- Layout dla Rozdziału 2 -->
                <RelativeLayout
                    android:id="@+id/section2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lineBelowText1"
                    android:layout_marginVertical="15dp">

                    <ImageView
                        android:id="@+id/readIndicator2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/baseline_check_circle_24_unread" />

                    <TextView
                        android:id="@+id/rozdzial2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toStartOf="@id/readIndicator2"
                        android:layout_marginHorizontal="30dp"
                        android:text="Jak działa Ethereum?"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rozdzial2time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/readIndicator2"
                        android:layout_alignStart="@id/readIndicator2"
                        android:layout_marginTop="1dp"
                        android:text="53s"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rozdzial2content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rozdzial2"
                        android:layout_alignEnd="@id/rozdzial2"
                        android:layout_alignStart="@id/rozdzial2"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:scrollHorizontally="false" />
                </RelativeLayout>

                <!-- Linia pod Rozdziałem 2 -->
                <View
                    android:id="@+id/lineBelowText2"
                    android:layout_width="360dp"
                    android:layout_height="4dp"
                    android:layout_below="@id/section2"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark_blue" />

                <!-- Layout dla Rozdziału 3 -->
                <RelativeLayout
                    android:id="@+id/section3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_below="@id/lineBelowText2">

                    <ImageView
                        android:id="@+id/readIndicator3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/baseline_check_circle_24_unread" />

                    <TextView
                        android:id="@+id/rozdzial3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/readIndicator3"
                        android:layout_marginStart="30dp"
                        android:text="Jak wydobywać Ethereum?"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rozdzial3time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/readIndicator3"
                        android:layout_alignStart="@id/readIndicator3"
                        android:layout_marginTop="1dp"
                        android:text="1m 12s"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rozdzial3content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rozdzial3"
                        android:layout_alignStart="@id/rozdzial3"
                        android:layout_marginEnd="30dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:scrollHorizontally="false" />
                </RelativeLayout>

                <!-- Linia pod Rozdziałem 3 -->
                <View
                    android:id="@+id/lineBelowText3"
                    android:layout_width="360dp"
                    android:layout_height="4dp"
                    android:layout_below="@id/section3"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark_blue" />

                <!-- Layout dla Rozdziału 4 -->
                <RelativeLayout
                    android:id="@+id/section4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lineBelowText3"
                    android:layout_marginVertical="15dp">

                    <ImageView
                        android:id="@+id/readIndicator4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/baseline_check_circle_24_unread" />

                    <TextView
                        android:id="@+id/rozdzial4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toStartOf="@id/readIndicator4"
                        android:layout_marginHorizontal="30dp"
                        android:text="Skalowanie Ehtereum"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rozdzial4time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/readIndicator4"
                        android:layout_alignStart="@id/readIndicator4"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="10dp"
                        android:text="59s"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/rozdzial4content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rozdzial4"
                        android:layout_alignEnd="@id/rozdzial4"
                        android:layout_alignStart="@id/rozdzial4"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:scrollHorizontally="false" />
                </RelativeLayout>

                <!-- Linia pod Rozdziałem 4 -->
                <View
                    android:id="@+id/lineBelowText4"
                    android:layout_width="360dp"
                    android:layout_height="4dp"
                    android:layout_below="@id/section4"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark_blue" />


                <RelativeLayout
                    android:id="@+id/game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lineBelowText4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/gametext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:layout_marginRight="20dp"
                        android:text="POŁĄCZ DEFINICJE"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginVertical="5dp"
                        android:layout_toEndOf="@id/gametext"
                        android:src="@drawable/controller" />

                </RelativeLayout>


                <View
                    android:id="@+id/lineBelowText5"
                    android:layout_width="360dp"
                    android:layout_height="4dp"
                    android:layout_below="@id/game"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark_blue" />


                <!-- Layout pod Rozdziałem 9 -->
                <RelativeLayout
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lineBelowText5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/testtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:layout_marginRight="20dp"
                        android:text="SPRAWDZNIAN"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginVertical="10dp"
                        android:layout_toEndOf="@id/testtext"
                        android:src="@drawable/testicon" />

                </RelativeLayout>
                <View
                    android:id="@+id/lineBelowText6"
                    android:layout_width="360dp"
                    android:layout_height="4dp"
                    android:layout_below="@id/test"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:background="@color/dark_blue" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>





</RelativeLayout>
